<%
  # Params:
  # customer_id (required)
%>

<h1>Listing Projects</h1>

<table>
  <thead>
    <tr>
      <th>Customer</th>
      <th>Name</th>
      <th>Description</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Created by</th>
      <th>Created at</th>
      <th>Updated by</th>
      <th>Updated at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% customer.projects.each do |project| %>
      <tr>
        <td><%= project.customer_id %></td>
        <td><%= project.name %></td>
        <td><%= project.description %></td>
        <td><%= project.start_date %></td>
        <td><%= project.end_date %></td>
        <td><%= project.created_by %></td>
        <td><%= project.created_at %></td>
        <td><%= project.updated_by %></td>
        <td><%= project.updated_at %></td>
        <td><%= link_to 'Show', customer_project_path(project.customer_id, project.id) %></td>
        <td><%= link_to 'Edit', edit_customer_project_path(project.customer_id, project.id) %></td>
        <td><%= link_to 'Destroy', customer_project_path(project.customer_id, project.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Project', new_customer_project_path(customer.id) %>
